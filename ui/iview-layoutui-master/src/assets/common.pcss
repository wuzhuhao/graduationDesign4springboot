.content-wrapper {
	& >>>.ivu-table th{	
		
		color: #444 !important;
	}
	
	/**状态前面小圆点样式*/
	& >>> .red-cir {
		width: 11px;
		height: 11px;
		display: inline-block;
		background: #e74c3c;
		border-radius: 50% 50%;
		margin-right: 5px;
	}

	& >>> .green-cir {
		width: 11px;
		height: 11px;
		display: inline-block;
		background: #19be6b;
		border-radius: 50% 50%;
		margin-right: 5px;
	}

	& >>> .ivu-dropdown-item{
		transition: unset !important;
		&:hover {
            background: #008CEE !important;
            color:#fff !important;
        }
	}	
	& >>> .ivu-select-item{
		transition: unset !important;
		&:hover {
            background: #008CEE !important;
            color:#fff !important;
        }
	}	
	& >>> .ivu-select-item-focus{
		background: #fff !important;
        color:#008CEE !important;
		font-weight:bold;
	}
}

.dd-menu{
	& >>> .ivu-dropdown-item{
		transition: unset !important;
		&:hover {
            background: #008CEE !important;
            color:#fff !important;
        }
	}	
}